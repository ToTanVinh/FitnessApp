<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".KhachHang.CaNhanKhachHang">

    <!-- Header with profile title and edit button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/round_corner_color_default"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cá nhân"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewProducts"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="THÔNG TIN CÁ NHÂN"
            android:textSize="16sp" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/round_corner_blue"
            android:text="Cập nhật" />

        <Button
            android:id="@+id/buttonReturn"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_corner_gray"
            android:text="Thoát"
            android:textColor="@color/white" />


    </LinearLayout>

    <!-- Profile information fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@drawable/rounded_corners"
        android:elevation="2dp">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và Tên"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/profileBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Ngày sinh"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/profileGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Giới tính"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif" />
    </LinearLayout>
</LinearLayout>